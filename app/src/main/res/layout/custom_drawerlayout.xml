            android:elevation="6dp"
            android:src="@drawable/ic_plus"
            app:backgroundTint="@android:color/holo_red_light"
            app:borderWidth="0dp"
            app:fabSize="normal"
            app:pressedTranslationZ="12dp"></android.support.design.widget.FloatingActionButton>

